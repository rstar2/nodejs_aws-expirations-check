{
    "env": {
        "es6": true,
		"node": true,
		"commonjs": true,
		"jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "extends": "eslint:recommended",
    "rules": {
        "consistent-return":"error",
        "indent"           : ["warn", 4,  { "SwitchCase": 1 }],
        "semi"             : ["error", "always"],
        "quotes"           : ["error", "single"],
        "no-else-return"   : "warn",
        "space-unary-ops"  :"error",
        "no-console"       : "off",
		"no-var"           : "error",
		"comma-dangle"	   : [ "off", "always" ],
		"linebreak-style"  : "off"
    },
	"root": true
}
